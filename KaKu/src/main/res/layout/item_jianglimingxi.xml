<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View style="@style/Line_h" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x88"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView

            android:id="@+id/tv_rewards_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="wangbing"
            android:textColor="#000"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/iv_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:src="@drawable/img_ggr" />

        <TextView
            android:id="@+id/tv_rewards_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:gravity="right"
            android:text="wangbing"
            android:textColor="#000"
            android:textSize="17sp" />

    </LinearLayout>

    <View style="@style/Line_h" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"

            >

            <TextView
                android:id="@+id/tv_rewards_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500"
                android:textColor="#999999"
                android:textSize="23sp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="奖励积分"
                android:textColor="#999999"
                android:textSize="15sp" />


        </LinearLayout>

        <View
            style="@style/Line_v"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <TextView
                android:id="@+id/tv_rewards_quasi_cash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥500"
                android:textColor="#F1553C"
                android:textSize="23sp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="奖励准现金"
                android:textColor="#999999"
                android:textSize="15sp" />


        </LinearLayout>

        <View
            style="@style/Line_v"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <TextView

                android:id="@+id/tv_rewards_cash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500"
                android:textColor="#999999"
                android:textSize="23sp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="奖励现金"
                android:textColor="#999999"
                android:textSize="15sp" />


        </LinearLayout>


    </LinearLayout>

    <View style="@style/Line_h" />
</LinearLayout>
