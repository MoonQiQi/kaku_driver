<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <include
        android:id="@+id/title_yuyuetask"
        layout="@layout/activity_titlebar" />

    <View
        style="@style/Line_h"
        android:layout_marginTop="15dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="任务名称"
            android:textColor="@color/color_word"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_yuyuetask_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="15dp"
            android:text="任务名称"
            android:textColor="@color/black"
            android:textSize="15dp" />

    </RelativeLayout>

    <View style="@style/Line_h" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="任务周期"
            android:textColor="@color/color_word"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_yuyuetask_zhouqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="15dp"
            android:text="任务周期"
            android:textColor="@color/black"
            android:textSize="15dp" />

    </RelativeLayout>

    <View style="@style/Line_h" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="任务天数"
            android:textColor="@color/color_word"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_yuyuetask_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="15dp"
            android:text="任务天数"
            android:textColor="@color/black"
            android:textSize="15dp" />

    </RelativeLayout>

    <View style="@style/Line_h" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="标准收益"
            android:textColor="@color/color_word"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_yuyuetask_biaozhunshouyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="15dp"
            android:text="标准收益"
            android:textColor="@color/black"
            android:textSize="15dp" />

    </RelativeLayout>

    <View style="@style/Line_h" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="日收益"
            android:textColor="@color/color_word"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_yuyuetask_rishouyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="15dp"
            android:text="日收益"
            android:textColor="@color/black"
            android:textSize="15dp" />

    </RelativeLayout>

    <View style="@style/Line_h" />

    <View
        style="@style/Line_h"
        android:layout_marginTop="15dp" />

    <RelativeLayout
        android:id="@+id/rela_yuyuetask_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shouhuobeijing">
        <!--收货地址-->

        <LinearLayout
            android:id="@+id/ll_yuyuetask_addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right|left"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_yuyuetask_addrname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="false"
                    android:layout_gravity="right"
                    android:layout_marginLeft="15dp"
                    android:drawableLeft="@drawable/shouhuotouxiang"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_yuyuetask_addrphone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:drawableLeft="@drawable/shouhuoshouji"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="17sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_yuyuetask_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text=""
                android:textColor="#999999"
                android:textSize="15sp" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_yuyuetask_notify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="填写车贴邮寄地址，预约新任务"
            android:textColor="#000000"
            android:textSize="16sp" />

    </RelativeLayout>

    <Button
        android:layout_marginTop="30dp"
        android:id="@+id/btn_yuyuetask_commit"
        android:text="提交预约"
        style="@style/Btn_Red" />


</LinearLayout>
