<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_item_shoppic_attention"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="15dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/tv_item_shopname_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/iv_item_shoppic_attention"
            android:ellipsize="end"
            android:maxEms="12"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_item_shopbrand_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_shopname_attention"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/iv_item_shoppic_attention"
            android:drawableLeft="@drawable/fuwu"
            android:drawablePadding="5dp"
            android:ellipsize="end"
            android:maxEms="12"
            android:singleLine="true"
            android:textColor="@color/color_word"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_item_shopaddr_attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_shopbrand_attention"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/iv_item_shoppic_attention"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/color_word"
            android:textSize="14sp" />

    </RelativeLayout>

    <View
        style="@style/Line_h"
        android:layout_marginTop="8dp" />

</LinearLayout>