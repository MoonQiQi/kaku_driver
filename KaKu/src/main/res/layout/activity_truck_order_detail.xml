<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"><!-- android:background="@drawable/topbar_bg" -->

    <include
        android:id="@+id/include_titlebar"
        layout="@layout/activity_titlebar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--订单号-->


            <RelativeLayout
                android:id="@+id/rela_truck_order_id"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x88"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_truck_order_id"
                    style="@style/ConfirmOrderTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:gravity="center_vertical"
                    android:text="订单号"
                    android:textColor="#000000" />

            </RelativeLayout>

            <View style="@style/Line_h" />

            <View
                android:id="@+id/view_order_xianchang"
                style="@style/Line_h"
                android:layout_marginTop="15dp" />

            <RelativeLayout
                android:id="@+id/rela_chepinorder_noaddr"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x88"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                android:visibility="visible">

                <TextView
                    style="@style/ConfirmOrderTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:gravity="center_vertical"
                    android:text="领取方式" />

                <TextView
                    android:id="@+id/tv_chetieorder_lingqufangshi"
                    style="@style/ConfirmOrderText"
                    android:maxWidth="220dp"
                    android:text="活动现场已领取"
                    android:textColor="#000" />

            </RelativeLayout>


            <!--收货地址-->

            <LinearLayout
                android:id="@+id/line_address_xianchanggoumai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shouhuobeijing"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right|left"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tv_address_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="false"
                        android:layout_gravity="right"
                        android:layout_marginLeft="15dp"
                        android:drawableLeft="@drawable/shouhuotouxiang"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tv_address_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:drawableLeft="@drawable/shouhuoshouji"
                        android:text=""
                        android:textColor="#000000"
                        android:textSize="17sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_address_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="#999999"
                    android:textSize="15sp" />


            </LinearLayout>


            <View style="@style/Line_h" />


            <!--购物车结算列表-->
            <View
                style="@style/Line_h"
                android:layout_marginTop="15dp" />

            <ListView
                android:id="@+id/lv_truck_detail_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:divider="#dedede"
                android:dividerHeight="0.5dp" />

            <!--分割线 与顶部间隔15dp-->
            <View
                style="@style/Line_h"
                android:layout_marginTop="15dp" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x88"
                android:layout_gravity="center_vertical"
                android:background="@color/white">

                <TextView
                    style="@style/ConfirmOrderTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:gravity="center_vertical"
                    android:text="支付方式" />

                <TextView
                    android:id="@+id/tv_truck_paytype"
                    style="@style/ConfirmOrderTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:gravity="center_vertical"
                    android:text="待支付"
                    android:textColor="@color/black" />
            </RelativeLayout>


            <View style="@style/Line_h" />


            <!--分割线 与顶部间隔15dp-->
            <View
                style="@style/Line_h"
                android:layout_marginTop="15dp" />


            <!--商品总额-->


            <RelativeLayout
                android:id="@+id/rela_confirmorder_totalprice"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x88"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                android:visibility="visible">

                <TextView
                    style="@style/ConfirmOrderTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:gravity="center_vertical"
                    android:text="商品总额" />

                <TextView
                    android:id="@+id/tv_truck_totalprice"
                    style="@style/ConfirmOrderText"

                    android:maxWidth="220dp"
                    android:text="￥0.00"
                    android:textColor="#000" />

            </RelativeLayout>

            <!--减积分-->
            <!--分割线-->
            <View style="@style/Line_h" />

            <RelativeLayout
                android:id="@+id/rela_point_pricepoint"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x88"
                android:layout_gravity="center_vertical"

                android:background="@color/white"
                android:visibility="visible">

                <TextView
                    style="@style/ConfirmOrderTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:gravity="center_vertical"
                    android:text="-积分" />

                <TextView
                    android:id="@+id/tv_truck_pricepoint"
                    style="@style/ConfirmOrderText"

                    android:maxWidth="220dp"
                    android:text="￥0.00"
                    android:textColor="#000" />

            </RelativeLayout>
            <!--减积分-->
            <!--分割线-->
            <View style="@style/Line_h" />

            <RelativeLayout
                android:id="@+id/rela_point_moneybalance"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x88"
                android:layout_gravity="center_vertical"

                android:background="@color/white"
                android:visibility="visible">

                <TextView
                    style="@style/ConfirmOrderTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x30"
                    android:gravity="center_vertical"
                    android:text="-余额" />

                <TextView
                    android:id="@+id/tv_truck_moneybalance"
                    style="@style/ConfirmOrderText"

                    android:maxWidth="220dp"
                    android:text="￥0.00"
                    android:textColor="#000" />

            </RelativeLayout>

            <!--实付款-->
            <!--分割线-->
            <View style="@style/Line_h" />

            <RelativeLayout
                android:id="@+id/rela_confirmorder_pricebill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_confirmorder_pricebill"
                    android:layout_alignParentRight="false"
                    android:layout_marginTop="@dimen/x30"
                    android:layout_toLeftOf="@+id/tv_truck_pricebill"

                    android:text="实付款: "
                    android:textColor="@color/black"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_truck_pricebill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/x30"
                    android:maxWidth="220dp"
                    android:paddingRight="@dimen/x30"
                    android:text="￥0.00"
                    android:textColor="@color/red"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_order_time_create"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tv_truck_pricebill"
                    android:layout_marginRight="15dp"
                    android:paddingBottom="@dimen/x30"
                    android:paddingTop="5dp"
                    android:text="下单日期:"
                    android:textColor="#999"
                    android:textSize="17sp" />

            </RelativeLayout>
            <!--分割线-->
            <View style="@style/Line_h" />

        </LinearLayout>


    </ScrollView>

    <!--<Button
        android:id="@+id/btn_bottom"
        style="@style/Btn_Red"
        android:layout_gravity="bottom"
        android:layout_marginTop="10dp"
        android:text="立即支付" />-->
    <View style="@style/Line_h" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="right"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_top"
            style="@style/Btn_BaiDi_small"
            android:text="取消订单"
            android:textSize="14sp" />

        <Button

            android:id="@+id/btn_bottom"
            style="@style/Btn_Red_small"
            android:text="立即支付"
            android:textSize="14sp" />
    </LinearLayout>


</LinearLayout>
