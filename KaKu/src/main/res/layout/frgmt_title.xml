<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="47dp"
    android:orientation="horizontal"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:background="@color/black" >

    <LinearLayout
        android:id="@+id/ll_title_settings"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/fragment_left_right_margin"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_left"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/tv_title_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/activity_left_title_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_title_name"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text=""
        android:singleLine="true"
        android:gravity="center"
        android:layout_weight="1"
        android:textColor="@color/white"
        android:textSize="@dimen/fragment_topbar_title_size" />

    <LinearLayout
        android:id="@+id/ll_title_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/fragment_left_right_margin"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            />

        <!-- <TextView
            android:id="@+id/tv_title_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blank"
            android:textSize="@dimen/activity_left_title_size" /> -->
    </LinearLayout>

</LinearLayout>