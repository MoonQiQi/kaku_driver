<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ic_empty_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/loading_empty_view_iv_margin_bottom"/>

    <TextView
        android:id="@+id/tv_empty_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/loading_empty_view_tv_margin_top"
        android:gravity="center"
        android:textColor="@color/white_50_transparent_color"
        android:textSize="@dimen/big_text_size"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_empty_info"
        android:layout_width="@dimen/loading_empty_view_btn_width"
        android:layout_height="@dimen/loading_empty_view_btn_height"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/loading_empty_view_btn_top"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/middle_text_size"
        android:visibility="gone" />

</LinearLayout>