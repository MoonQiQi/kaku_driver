<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_baoyang_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tv_baoyang_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_baoyang_image"
        android:layout_toRightOf="@+id/iv_baoyang_image"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:maxLength="6"
        android:textSize="16sp"
        android:text="" />

    <TextView
        android:id="@+id/tv_baoyang_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_red"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/tv_baoyang_name"
        android:layout_alignLeft="@+id/tv_baoyang_name"
        android:text="Â¥0" />

<RelativeLayout
    android:layout_alignParentRight="true"
    android:layout_marginRight="80dp"
    android:layout_alignBottom="@+id/tv_baoyang_price"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_baoyang_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_toLeftOf="@+id/iv_baoyang_jiahao"
            android:gravity="center"
            android:text="0"/>

</RelativeLayout>

    </RelativeLayout>

</LinearLayout>