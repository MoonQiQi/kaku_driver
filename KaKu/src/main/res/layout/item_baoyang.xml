<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp">

            <ImageView
                android:id="@+id/iv_baoyangitem_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/tv_baoyangitem_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/iv_baoyangitem_image"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/iv_baoyangitem_image"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_baoyangitem_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_baoyangitem_name"
                android:layout_below="@+id/tv_baoyangitem_name"
                android:layout_marginRight="15dp"
                android:textColor="@color/color_word"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_baoyangitem_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_baoyangitem_name"
                android:layout_below="@+id/tv_baoyangitem_remark"
                android:text="Â¥0"
                android:textColor="@color/color_red"
                android:textSize="15sp" />

            <RelativeLayout
                android:id="@+id/rela_baoyangitem_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_baoyangitem_image"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp">

                <ImageView
                    android:id="@+id/iv_baoyangitem_jianhao"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:gravity="center"
                    android:src="@drawable/jianhao" />

                <TextView
                    android:id="@+id/tv_baoyangitem_num"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_toRightOf="@id/iv_baoyangitem_jianhao"
                    android:background="@drawable/kuangk"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/iv_baoyangitem_jiahao"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_toRightOf="@+id/tv_baoyangitem_num"
                    android:gravity="center"
                    android:src="@drawable/jia" />

            </RelativeLayout>

        </RelativeLayout>

        <View style="@style/Line_h" />

    </LinearLayout>

</LinearLayout>
