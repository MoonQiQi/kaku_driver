<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <include
        android:id="@+id/title_member_msg"
        layout="@layout/activity_titlebar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_color"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/iv_qrcode"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:scaleType="centerCrop"
                android:src="@drawable/qrcode_down" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/version_no2"
                android:textColor="#999999"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_qrcode_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="扫描二维码，您的朋友也可以下载卡库"
                android:textColor="#999999"
                android:textSize="11sp" />

            <View
                style="@style/Line_h"
                android:layout_marginTop="15dp" />

            <RelativeLayout
                android:id="@+id/rela_setting_info"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x88"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="15dp"
                    android:text="个人信息"
                    android:textColor="#000000"
                    android:textSize="17sp" />

                <ImageView

                    style="@style/MeImageEntry" />


            </RelativeLayout>


            <View
                style="@style/Line_h"
                android:layout_marginLeft="15dp" />

            <RelativeLayout
                android:id="@+id/rela_setting_edit_pwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x88"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="15dp"
                    android:text="修改支付密码"
                    android:textColor="#000000"
                    android:textSize="17sp" />

                <ImageView

                    style="@style/MeImageEntry" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <View
                    style="@style/Line_h"
                    android:layout_marginLeft="15dp" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rela_setting_address"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x88"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="15dp"
                    android:text="收货地址"
                    android:textColor="#000000"
                    android:textSize="17sp" />

                <ImageView

                    style="@style/MeImageEntry" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <View style="@style/Line_h" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/white">

                <View style="@style/Line_h" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rela_setting_update"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x88"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="15dp"
                    android:text="检查更新"
                    android:textColor="#000000"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_setting_update"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/iv_info_name"
                    android:gravity="center_vertical"
                    android:paddingRight="15dp"
                    android:text="请检查更新"
                    android:textColor="#999999"
                    android:textSize="17sp" />

                <ImageView
                    android:id="@+id/iv_info_name"
                    style="@style/MeImageEntry" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <View
                    style="@style/Line_h"
                    android:layout_marginLeft="15dp" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rela_setting_aboutus"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x88"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="15dp"
                    android:text="关于卡库"
                    android:textColor="#000000"
                    android:textSize="17sp" />


                <ImageView
                    android:id="@+id/iv_info_erweima1"

                    style="@style/MeImageEntry" />

            </RelativeLayout>

            <View style="@style/Line_h" />

            <Button
                android:id="@+id/btn_setting_exit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/bg_member_settings"
                android:gravity="center"
                android:text="退出登录"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
