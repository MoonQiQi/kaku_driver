<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <include
        android:id="@+id/title_jiashizheng"
        layout="@layout/activity_titlebar" />

    <TextView
        android:id="@+id/tv_xignshizheng_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_orange"
        android:gravity="center"
        android:padding="15dp"
        android:text="您有N次拍驾驶证赚收益的特权哦"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_adimage_jiashizheng"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:src="@drawable/xingshizhengmengban" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_adimage_jiashizheng"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:paddingBottom="15dp"
            android:text="拍摄驾驶证"
            android:textColor="@color/color_word"
            android:textSize="13sp" />

    </RelativeLayout>

    <View style="@style/Line_h" />

    <Button
        android:id="@+id/btn_adimage_tijiao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@color/color_orange"
        android:text="提    交"
        android:textColor="@color/white" />


</LinearLayout>
