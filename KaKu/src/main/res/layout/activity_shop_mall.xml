<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFF">

        <TextView
            android:id="@+id/tv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/jiantou"
            android:drawablePadding="3dp"
            android:gravity="center_vertical"
            android:text="返回"
            android:textColor="@color/color_back"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_mid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="登录"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true">

            <ImageView
                android:id="@+id/tv_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/gwc_black"
                android:text="保存"
                android:visibility="visible" />

            <TextView
                android:id="@+id/num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/mall_num_shape"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:visibility="invisible"
                tools:text="9" />

        </FrameLayout>

        <View
            android:id="@+id/view_line_h"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/dotted_line_horizontal" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <!--销量-->
        <RelativeLayout
            android:id="@+id/rela_shopmall_sales"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_shopmall_sales"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="10dp"
                android:text="销量"
                android:textColor="@color/black"
                android:textSize="17sp" />
            <!--android:drawableRight="@drawable/xiajiantouhei"-->

        </RelativeLayout>

        <View style="@style/Line_v"></View>

        <RelativeLayout
            android:id="@+id/rela_shopmall_newest"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_shopmall_newest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="10dp"
                android:text="最新"
                android:textColor="@color/red"
                android:textSize="17sp" />

        </RelativeLayout>
        -->

        <View style="@style/Line_v"></View>
        <!--价格-->
        <RelativeLayout
            android:id="@+id/rela_shopmall_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_shopmall_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableRight="@drawable/shopmall_normal"
                android:padding="10dp"
                android:text="价格 "
                android:textColor="@color/black"
                android:textSize="17sp" />

        </RelativeLayout>
        <!--筛选
        <RelativeLayout
            android:id="@+id/rela_shopmall_filter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_shopmall_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="筛选"
                android:textColor="@color/blank"
                android:textSize="17sp" />

        </RelativeLayout>-->
    </LinearLayout>
    <!--分割线-->
    <View style="@style/Line_h" />


    <com.yichang.kaku.view.PullToRefreshView
        android:id="@+id/pulltofresh_shopmall_products"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        android:padding="2dp"
        android:visibility="visible">

        <GridView
            android:id="@+id/gv_shopmall_products"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:horizontalSpacing="2dp"
            android:numColumns="2"
            android:scrollbars="none"
            android:verticalSpacing="2dp"
            android:visibility="visible" />

    </com.yichang.kaku.view.PullToRefreshView>


