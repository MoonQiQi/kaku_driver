<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/line_quanzi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_quanzi_tu"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/faxian_img_tu" />

            <ImageView
                android:id="@+id/iv_quanzi_re"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/faxian_img_re" />

            <TextView
                android:id="@+id/tv_quanzi_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_quanzi_head"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_below="@+id/line_quanzi"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/icon_boy" />

        <TextView
            android:id="@+id/tv_quanzi_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_quanzi_head"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/iv_quanzi_head"
            android:textColor="@color/black"
            android:textSize="15sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_quanzi_head"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_quanzi_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:drawablePadding="2dp"
                android:gravity="bottom"
                android:textColor="@color/color_word"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_quanzi_yuedu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/faxian_img_guankan"
                android:drawablePadding="2dp"
                android:gravity="bottom"
                android:text="0"
                android:textColor="@color/color_word"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_quanzi_pinglun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:drawableLeft="@drawable/faxian_img_pinglun"
                android:drawablePadding="2dp"
                android:gravity="bottom"
                android:text="0"
                android:textColor="@color/color_word"
                android:textSize="13sp" />

        </LinearLayout>

    </RelativeLayout>

    <View style="@style/Line_h" />

</LinearLayout>
