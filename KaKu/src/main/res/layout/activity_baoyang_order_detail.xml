<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <include
        android:id="@+id/include_titlebar"
        layout="@layout/activity_titlebar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/view_order_bottom"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rela_truck_order_id"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x88"
                    android:layout_gravity="center_vertical"
                    android:background="@color/white"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_truck_order_id"
                        style="@style/ConfirmOrderTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x30"
                        android:gravity="center_vertical"
                        android:text="订单编号"
                        android:textColor="#666666" />

                </RelativeLayout>

                <View style="@style/Line_h" />

                <RelativeLayout
                    android:id="@+id/rela_baoyangorderrdetail_faqishijianzi"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x88"
                    android:layout_gravity="center_vertical"
                    android:background="@color/white"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_baoyangorderrdetail_faqishijianzi"
                        style="@style/ConfirmOrderTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x30"
                        android:gravity="center_vertical"
                        android:text="发起时间" />

                    <TextView
                        android:id="@+id/tv_baoyangorderrdetail_faqishijian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:layout_toRightOf="@+id/tv_baoyangorderrdetail_faqishijianzi"
                        android:gravity="right"
                        android:textColor="#666666"
                        android:textSize="16sp" />

                </RelativeLayout>

                <View
                    android:id="@+id/view_wuliu1"
                    style="@style/Line_h" />

                <RelativeLayout
                    android:id="@+id/rela_baoyangorderrdetail_fuwudidian"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x88"
                    android:layout_gravity="center_vertical"
                    android:background="@color/white"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_baoyangorderrdetail_fuwudidianzi"
                        style="@style/ConfirmOrderTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x30"
                        android:gravity="center_vertical"
                        android:text="服务地点" />

                    <TextView
                        android:id="@+id/tv_baoyangorderrdetail_fuwudidian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:layout_toRightOf="@+id/tv_baoyangorderrdetail_fuwudidianzi"
                        android:gravity="right"
                        android:textColor="#666666"
                        android:textSize="16sp" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/honglanxian" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/tv_baoyangorderrdetail_addrname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_toLeftOf="@+id/iv_baoyangorderrdetail_call"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_baoyangorderrdetail_addr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_baoyangorderrdetail_addrname"
                        android:layout_marginLeft="15dp"
                        android:layout_toLeftOf="@+id/iv_baoyangorderrdetail_call"
                        android:drawableLeft="@drawable/dingweilan"
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/iv_baoyangorderrdetail_call"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/dianhualv" />

                </RelativeLayout>


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/honglanxian" />

                <View
                    style="@style/Line_h"
                    android:layout_marginTop="15dp" />

                <ListView
                    android:id="@+id/lv_baoyangdetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_baoyangdetail_gong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="right|center_vertical"
                    android:paddingBottom="5dp"
                    android:paddingRight="15dp"
                    android:paddingTop="5dp"
                    android:textColor="#666666"
                    android:textSize="14sp" />

                <View
                    style="@style/Line_h"
                    android:layout_marginTop="15dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x88"
                    android:layout_gravity="center_vertical"
                    android:background="@color/white">

                    <TextView
                        style="@style/ConfirmOrderTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x30"
                        android:gravity="center_vertical"
                        android:text="支付方式" />

                    <TextView
                        android:id="@+id/tv_truck_paytype"
                        style="@style/ConfirmOrderTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:gravity="center_vertical"
                        android:text="余额支付"
                        android:textColor="#666666" />

                </RelativeLayout>

                <View style="@style/Line_h" />

                <RelativeLayout
                    android:id="@+id/rela_confirmorder_totalprice"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x88"
                    android:layout_gravity="center_vertical"
                    android:background="@color/white"
                    android:visibility="visible">

                    <TextView
                        style="@style/ConfirmOrderTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x30"
                        android:gravity="center_vertical"
                        android:text="商品总额" />

                    <TextView
                        android:id="@+id/tv_truck_totalprice"
                        style="@style/ConfirmOrderText"
                        android:maxWidth="220dp"
                        android:text="￥0.00"
                        android:textColor="#666666" />

                </RelativeLayout>

                <View style="@style/Line_h" />

                <RelativeLayout
                    android:id="@+id/rela_order_huodongprice"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x88"
                    android:layout_gravity="center_vertical"
                    android:background="@color/white"
                    android:visibility="visible">

                    <TextView
                        style="@style/ConfirmOrderTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:text="活动优惠" />

                    <TextView
                        android:id="@+id/tv_order_huodongprice"
                        style="@style/ConfirmOrderText"
                        android:maxWidth="220dp"
                        android:text="-￥0.00"
                        android:textColor="#666666" />

                </RelativeLayout>

                <View
                    android:id="@+id/view_huodongyouhui"
                    style="@style/Line_h"
                    android:layout_marginLeft="15dp"
                    android:visibility="visible" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x88"
                    android:layout_gravity="center_vertical"
                    android:background="@color/white"
                    android:visibility="visible">

                    <TextView
                        style="@style/ConfirmOrderTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x30"
                        android:gravity="center_vertical"
                        android:text="工时费" />

                    <TextView
                        style="@style/ConfirmOrderText"
                        android:maxWidth="220dp"
                        android:text="+￥0.00"
                        android:textColor="#666666" />

                </RelativeLayout>

                <View style="@style/Line_h" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x88"
                    android:layout_gravity="center_vertical"
                    android:background="@color/white"
                    android:visibility="visible">

                    <TextView
                        style="@style/ConfirmOrderTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x30"
                        android:gravity="center_vertical"
                        android:text="优惠券" />

                    <TextView
                        android:id="@+id/tv_truck_moneyyouhuiquan"
                        style="@style/ConfirmOrderText"
                        android:maxWidth="220dp"
                        android:text="-￥0.00"
                        android:textColor="#666666" />

                </RelativeLayout>

                <View style="@style/Line_h" />

                <RelativeLayout
                    android:id="@+id/rela_point_moneybalance"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x88"
                    android:layout_gravity="center_vertical"
                    android:background="@color/white"
                    android:visibility="visible">

                    <TextView
                        style="@style/ConfirmOrderTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x30"
                        android:gravity="center_vertical"
                        android:text="余额" />

                    <TextView
                        android:id="@+id/tv_truck_moneybalance"
                        style="@style/ConfirmOrderText"
                        android:maxWidth="220dp"
                        android:text="-￥0.00"
                        android:textColor="#666666" />

                </RelativeLayout>

                <View style="@style/Line_h" />

                <RelativeLayout
                    android:id="@+id/rela_confirmorder_pricebill"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/tv_confirmorder_pricebill"
                        android:layout_alignParentRight="false"
                        android:layout_marginTop="@dimen/x30"
                        android:layout_toLeftOf="@+id/tv_truck_pricebill"
                        android:text="实付款: "
                        android:textColor="#666666"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tv_truck_pricebill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/x30"
                        android:maxWidth="220dp"
                        android:paddingRight="@dimen/x30"
                        android:text="￥0.00"
                        android:textColor="@color/red"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/tv_order_time_create"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/tv_truck_pricebill"
                        android:layout_marginRight="15dp"
                        android:paddingBottom="@dimen/x30"
                        android:paddingTop="5dp"
                        android:text="下单时间:"
                        android:textColor="#999"
                        android:textSize="17sp" />

                </RelativeLayout>

                <View style="@style/Line_h" />

            </LinearLayout>

        </ScrollView>

        <View
            android:id="@+id/view_order_bottom"
            style="@style/Line_h"
            android:layout_above="@+id/line_order_bottom" />

        <LinearLayout
            android:id="@+id/line_order_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp" />

            <ImageView
                android:id="@+id/btn_mid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp" />

            <ImageView
                android:id="@+id/btn_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_order_saomahexiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/line_order_bottom"
            android:layout_alignParentRight="true"
            android:layout_margin="25dp"
            android:src="@drawable/saomahexiao"
            android:visibility="invisible" />

        <FrameLayout
            android:id="@+id/frame_order"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#88000000"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_order_qrcode"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/tv_order_qrcode"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </LinearLayout>

        </FrameLayout>

    </RelativeLayout>

</LinearLayout>
