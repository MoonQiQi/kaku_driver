<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"><!-- android:background="@drawable/topbar_bg" -->

    <include
        android:id="@+id/title_choosecar"
        layout="@layout/activity_titlebar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/title_choosecar"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_color"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/line_choosecar_chexi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_color"
                android:orientation="vertical">

                <View
                    style="@style/Line_h"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="15dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="15dp"
                    android:text="车系"
                    android:textColor="@color/color_word"
                    android:textSize="18sp" />

                <View style="@style/Line_h" />

                <com.yichang.kaku.home.MyGridView
                    android:id="@+id/gv_chexi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:horizontalSpacing="20dp"
                    android:numColumns="2"
                    android:paddingBottom="10dp"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:paddingTop="10dp"
                    android:verticalSpacing="10dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/line_choosecar_chexing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_color"
                android:orientation="vertical">

                <View
                    style="@style/Line_h"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="15dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="15dp"
                    android:text="车型"
                    android:textColor="@color/color_word"
                    android:textSize="18sp" />

                <View style="@style/Line_h" />


                <com.yichang.kaku.home.MyGridView
                    android:id="@+id/gv_chexing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:horizontalSpacing="20dp"
                    android:numColumns="2"
                    android:paddingBottom="10dp"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:paddingTop="10dp"
                    android:verticalSpacing="10dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/line_choosecar_qudong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_color"
                android:orientation="vertical">

                <View
                    style="@style/Line_h"
                    android:layout_marginTop="15dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="15dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="15dp"
                    android:text="驱动形式"
                    android:textColor="@color/color_word"
                    android:textSize="18sp" />

                <View style="@style/Line_h" />

                <com.yichang.kaku.home.MyGridView
