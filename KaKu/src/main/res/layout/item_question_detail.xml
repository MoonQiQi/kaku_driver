<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="15dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="@dimen/x54"
                android:layout_height="@dimen/x54"
                android:src="@drawable/ic_launcher" />

            <LinearLayout
                android:layout_width="@dimen/x530"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x54"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x10"
                        android:text="妖王"
                        android:textColor="#119bea"
                        android:textSize="14sp" />

                    <ImageView

                        android:id="@+id/iv_renzheng"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x10"
                        android:src="@drawable/img_tiwen_renzheng"

                        />

                    <TextView
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x10"
                        android:text="卡库认证维修技师"
                        android:textColor="#999999"
                        android:textSize="13sp" />

                </LinearLayout>


                <com.yichang.kaku.view.KakuMultiLineTextView

                    android:id="@+id/tv_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="5dp"
                    android:text="你好，这个处理好了的，不会有事的你好，这个处理好了的，不会有事的你好，这个处理好了的，不会有事的你好，这个处理好了的，不会有事的你好，这个处理好了的，不会有事的"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <!--<View style="@style/Line_h" android:id="@+id/view_comment_list"/>-->

                <ListView
                    android:id="@+id/lv_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:background="#f9f9f9"

                    ></ListView>

                <View style="@style/Line_h" android:id="@+id/view_total_answer_top"/>

                <RelativeLayout
                    android:id="@+id/rela_total_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#f9f9f9"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/tv_total_answer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="总共有5条对话"
                        android:textColor="#999999"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/jinqu" />

                </RelativeLayout>

               <!-- <View
                    android:id="@+id/view_total_answer"
                    style="@style/Line_h" />-->
            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="51dp"

            android:gravity="center_vertical"


            >

            <ImageView
                android:id="@+id/iv_answer_time"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/time" />

            <TextView

                android:id="@+id/tv_answer_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/iv_answer_time"
                android:text="刚刚"
                android:textColor="#999999"
                android:textSize="12sp"

                />

            <ImageView
                android:id="@+id/iv_jxzx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_marginRight="@dimen/x15"
                android:layout_toLeftOf="@+id/iv_cnhd"
                android:src="@drawable/btn_jxzx" />

            <ImageView
                android:id="@+id/iv_cnhd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/btn_cnhd" />


        </RelativeLayout>


    </LinearLayout>
    <ImageView
        android:id="@+id/iv_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/img_tiwen_caina"
        android:layout_marginRight="15dp"
        />
</RelativeLayout>