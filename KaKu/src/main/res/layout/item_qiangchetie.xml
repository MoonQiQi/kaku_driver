<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <View style="@style/Line_h" />

        <TextView
            android:id="@+id/tv_chetieitem_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="2000-00-00"
            android:textColor="@color/color_word"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_chetieitem_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:text="状态"
            android:textColor="@color/color_red"
            android:textSize="15sp" />

    </RelativeLayout>

    <View style="@style/Line_h" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_chetieitem_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="15dp"
            android:background="@drawable/bg_edittext"
            fresco:placeholderImage="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/tv_chetieitem_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_chetieitem_image"
            android:layout_toRightOf="@+id/iv_chetieitem_image"
            android:text="卡库养车推广车贴"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_chetieitem_timeshouyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_chetieitem_name"
            android:layout_below="@+id/tv_chetieitem_name"
            android:layout_marginTop="5dp"
            android:text="2000-2000收益"
            android:textColor="@color/color_word"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_chetieitem_shoudan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_chetieitem_name"
            android:layout_below="@+id/tv_chetieitem_timeshouyi"
            android:layout_marginTop="5dp"
            android:text="首单1元"
            android:textColor="@color/color_red"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_chetieitem_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_chetieitem_name"
            android:layout_below="@+id/tv_chetieitem_shoudan"
            android:text="¥ 0"
            android:textColor="@color/color_red"
            android:textSize="13sp" />

        <View
            android:id="@+id/view_chetieitem"
            style="@style/Line_h"
            android:layout_below="@+id/iv_chetieitem_image"
            android:layout_marginTop="15dp" />

        <RelativeLayout
            android:id="@+id/rela_people"
            android:layout_marginRight="15dp"
            android:layout_above="@+id/view_chetieitem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_chetieitem_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:layout_toLeftOf="@+id/view_people"
                android:text="100人参与"
                android:textColor="@color/color_word"
                android:textSize="12sp" />

            <View
                android:id="@+id/view_people"
                android:layout_width="0.5dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:layout_toLeftOf="@+id/tv_chetieitem_day"
                android:background="@drawable/dotted_line_vertical" />

            <TextView
                android:id="@+id/tv_chetieitem_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="90天期限"
                android:textColor="@color/color_word"
                android:textSize="12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_above="@+id/rela_people"
            android:layout_alignRight="@+id/rela_people"
            android:layout_width="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/progress_chetieitem"
            style="@style/StyleProgressBarSeckill"
            android:layout_width="100dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shape_progressbar_bg"
            android:max="100"
            android:progress="100" />

        <TextView
            android:id="@+id/tv_chetieitem_percent"
            android:textColor="@color/color_red"
            android:textSize="12sp"
            android:text="100%"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_chetieitem_yuqishouyi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="15dp"
            android:text="预期收益"
            android:textColor="@color/color_word"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_chetieitem_mashangqiang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/mashangqiang" />

    </RelativeLayout>

    <View style="@style/Line_h" />

</LinearLayout>
