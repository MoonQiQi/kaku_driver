<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_shuoming_0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:text="任务说明"
        android:layout_marginLeft="15dp"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_shuoming_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="车贴拍照一次可持续收益7天。"
        android:textColor="@color/color_word"
        android:drawableLeft="@drawable/jiangefu"
        android:padding="5dp"
        android:drawablePadding="2dp"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_shuoming_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="晚于18点拍照有可能影响当天收益。"
        android:textColor="@color/color_word"
        android:drawableLeft="@drawable/jiangefu"
        android:padding="5dp"
        android:drawablePadding="2dp"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_shuoming_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="审核通过，继续获取收益。"
        android:textColor="@color/color_word"
        android:drawableLeft="@drawable/jiangefu"
        android:padding="5dp"
        android:drawablePadding="2dp"
        android:textSize="15sp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_shuoming_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="收益可前往【我】-【我的余额】查看。"
        android:textColor="@color/color_word"
        android:drawableLeft="@drawable/jiangefu"
        android:padding="5dp"
        android:drawablePadding="2dp"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_shuoming_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="任务结束后，可开启下个任务，继续获得收益。"
        android:textColor="@color/color_word"
        android:drawableLeft="@drawable/jiangefu"
        android:padding="5dp"
        android:drawablePadding="2dp"
        android:textSize="15sp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_shuoming_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="如有疑问，请拨打【400-6867585】。"
        android:textColor="@color/color_word"
        android:drawableLeft="@drawable/jiangefu"
        android:padding="5dp"
        android:drawablePadding="2dp"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_shuoming_lottery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="【中奖百分百】"
        android:textColor="#d10000"
        android:drawableLeft="@drawable/jiangefu"
        android:padding="5dp"
        android:drawablePadding="2dp"
        android:textSize="15sp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_shuoming_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="任务最终解释权属于卡库养车。"
        android:textColor="@color/color_word"
        android:drawableLeft="@drawable/jiangefu"
        android:padding="5dp"
        android:drawablePadding="2dp"
        android:textSize="15sp" />

</LinearLayout>
