<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg_color"
    android:orientation="vertical"><!-- android:background="@drawable/topbar_bg" -->

    <include
        android:id="@+id/include_titlebar"
        layout="@layout/activity_titlebar" />


    <View
        style="@style/Line_h"
        android:layout_marginTop="15dp" />

    <RelativeLayout
        android:id="@+id/rela_modifymename_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x88"
        android:layout_below="@+id/include_titlebar"

        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingRight="15dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:text="姓名"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_certification_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:hint="名字"

            android:textColor="#666666"
            android:textSize="17sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/x5"
            android:layout_marginTop="@dimen/x5">

            <EditText
                android:id="@+id/et_certification_name"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@null"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:cursorVisible="true"
                android:gravity="center|right"
                android:hint="请输入名字"
                android:textCursorDrawable="@drawable/cursor"
                android:textColor="#999999"
                android:textSize="17sp" />
        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <View
            style="@style/Line_h"
            android:layout_marginLeft="15dp"

            />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rela_modifymename_ID"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x88"
        android:layout_below="@+id/rela_modifymename_name"

        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:text="身份证号"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_certification_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:hint="身份证号码"
            android:maxLength="18"
            android:textColor="#666666"
            android:textSize="17sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/x5"
            android:layout_marginTop="@dimen/x5">

            <EditText
                android:id="@+id/et_certification_id"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:background="@null"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:cursorVisible="true"
                android:textCursorDrawable="@drawable/cursor"
                android:gravity="center|right"
                android:hint="请输入身份证号码"
                android:maxLength="18"
                android:textColor="#999999"
                android:textSize="17sp" />
        </LinearLayout>


    </RelativeLayout>


    <View style="@style/Line_h" />
</LinearLayout>
