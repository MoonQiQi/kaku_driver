<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <include
        android:id="@+id/title_add_e"
        layout="@layout/activity_titlebar_chetie" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <ScrollView
            android:id="@+id/scroll_add_e"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn_add_e"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bg_color"
                android:orientation="vertical"
                android:paddingBottom="30dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_shouyi">

                    <TextView
                        android:id="@+id/tv_shouyi_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:text="2012-12-23"
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_shouyi_zongshouyi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/tv_shouyi_time"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:text="活动天数：0天 "
                        android:textColor="@color/white"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_shouyi_canyu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_shouyi_time"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="15dp"
                        android:text="共有36525名司机参与"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_shouyi_gongjishouyizi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/tv_shouyi_canyu"
                        android:layout_below="@+id/tv_shouyi_canyu"
                        android:layout_marginTop="30dp"
                        android:text="共计收益"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <RelativeLayout
                        android:layout_alignLeft="@+id/tv_shouyi_canyu"
                        android:layout_below="@+id/tv_shouyi_gongjishouyizi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_shouyieyang"
                            android:text="¥ "
                            android:layout_marginTop="15dp"
                            android:textColor="@color/white"
                            android:textSize="30sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <com.yichang.kaku.view.RiseNumberTextView
                            android:id="@+id/tv_shouyi_dangqianshouyiqian"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/tv_shouyieyang"
                            android:layout_toRightOf="@+id/tv_shouyieyang"
                            android:text="0.00"
                            android:textColor="@color/white"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </RelativeLayout>

                <View style="@style/Line_h" />

                <LinearLayout
                    android:id="@+id/ll_yaoqing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="10dp">

                    <ImageView

                        android:id="@+id/iv_yaoqing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/btn_yq"

                        />

                </LinearLayout>

                <View style="@style/Line_h" />

                <RelativeLayout
                    android:id="@+id/rela_addn_button_e"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:text="任务结束"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_margin="15dp"
                        android:textColor="@color/color_word"
                        android:textSize="16sp" />

                </RelativeLayout>

                <View style="@style/Line_h" />

                <!--  日历  -->
                <!--  日历  -->
                <include
                    android:id="@+id/layout_calendar"
                    layout="@layout/layout_calendar" />

                <View style="@style/Line_h" />

                <View
                    style="@style/Line_h"
                    android:layout_marginTop="15dp" />

                <include layout="@layout/include_chetiexinxi" />

                <include
                    android:id="@+id/renwushuoming_e"
                    layout="@layout/include_renwushuoming" />

                <include
                    android:id="@+id/chetiexinxi_e"
                    layout="@layout/include_tietieyangshi" />

                <ImageView
                    android:id="@+id/iv_shouqi_e"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/btn_shouqixiangqing" />

            </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/btn_add_e"
            style="@style/Btn_Red"
            android:layout_alignParentBottom="true"
            android:background="#9B9C9D"
            android:text="申请开始" />

        <!--<ImageView
            android:id="@+id/iv_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/img_coin"
            android:visibility="gone" />-->
    </RelativeLayout>

</LinearLayout>
