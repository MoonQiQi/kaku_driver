<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30"
        android:background="@color/bg_gray" />

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="@dimen/x54"
        android:layout_height="@dimen/x54"
        android:layout_below="@+id/divider"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginTop="@dimen/x30"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_boy" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_pic"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginTop="@dimen/x8"
        android:layout_toRightOf="@+id/iv_pic"
        android:gravity="center_vertical"
        android:textColor="#FF8B03"
        android:textSize="@dimen/x22"
        tools:text="刘海生" />


    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_name"
        android:layout_below="@+id/iv_pic"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/x10"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="@dimen/x26"
        tools:text="我们为了实现文本的滚动可以" />

    <ImageView
        android:id="@+id/img_ask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/question"
        android:layout_below="@+id/question"
        android:layout_marginTop="@dimen/x10"
        tools:src="@drawable/ic_launcher" />

    <RelativeLayout
        android:id="@+id/rl_res"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/question"
        android:layout_below="@+id/img_ask"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/x20"
        android:background="@drawable/item_bg"
        android:paddingBottom="@dimen/x12"
        android:paddingLeft="@dimen/x12"
        android:paddingRight="@dimen/x30">

        <TextView
            android:id="@+id/res_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x24"
            android:drawablePadding="@dimen/x10"
            android:drawableRight="@drawable/img_tiwen_renzheng"
            android:gravity="center_vertical"
            android:textColor="#119BEA"
            android:textSize="@dimen/x20"
            tools:text="疏博文" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/res_name"
            android:layout_marginLeft="@dimen/x10"
            android:layout_toRightOf="@+id/res_name"
            android:gravity="center_vertical"
            android:text="卡库认证维修技师"
            android:textColor="@color/color_hint"
            android:textSize="@dimen/x20" />

        <TextView
            android:id="@+id/res_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/res_name"
            android:layout_marginTop="@dimen/x22"
            android:gravity="center_vertical"
            android:maxLines="3"
            android:textColor="@color/color_hint"
            android:textSize="@dimen/x20"
            tools:text="回答：大家应该都有这样的经历,当我们为按钮设置了背景后;由于按钮显示的内容过多,这个图片都被拉伸了,又是很不好看,我们通常是想缩放显示文字的那个部分9patch的出现,可以方便的解决这个问题!" />

    </RelativeLayout>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_pic"
        android:layout_below="@+id/rl_res"
        android:layout_marginBottom="@dimen/x20"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginTop="@dimen/x20"
        android:drawableLeft="@drawable/iimg_tiwen2"
        android:drawablePadding="@dimen/x6"
        android:gravity="center_vertical"
        android:textColor="@color/color_hint"
        android:textSize="@dimen/x20"
        tools:text="7分钟前" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/time"
        android:layout_marginRight="@dimen/x30">

        <TextView
            android:id="@+id/res_per_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/iimg_tiwen3"
            android:drawablePadding="@dimen/x6"
            android:gravity="center_vertical"
            android:textColor="@color/color_hint"
            android:textSize="@dimen/x20"
            tools:text="7" />

        <TextView
            android:id="@+id/res_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x12"
            android:drawableLeft="@drawable/iimg_tiwen4"
            android:drawablePadding="@dimen/x6"
            android:gravity="center_vertical"
            android:textColor="@color/color_hint"
            android:textSize="@dimen/x20"
            tools:text="700" />

    </LinearLayout>

    <View
        style="@style/gray_line"
        android:layout_below="@+id/time" />

</RelativeLayout><!-- From: file:/F:/studio_workpace/kaku_android/KaKu/src/main/res/layout/layout_ask_main_item.xml -->