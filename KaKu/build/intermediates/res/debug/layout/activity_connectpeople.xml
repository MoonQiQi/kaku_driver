<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
     >
     
    <include layout="@layout/activity_titlebar"
         android:id="@+id/title_connectpeople" />

    <RelativeLayout
        android:id="@+id/rela_connect_name"
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/white"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv_connect_namee"
            android:layout_width="wrap_content"
            android:text="联系人"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:padding="10dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/tv_connect_name"
            android:textCursorDrawable="@drawable/cursor"
            android:layout_width="match_parent"
            android:layout_alignBottom="@+id/tv_connect_namee"
            android:layout_toRightOf="@+id/tv_connect_namee"
            android:textColor="@color/color_word"
            android:textSize="14sp"
            android:paddingLeft="5dp"
            android:layout_marginRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_alignLeft="@+id/tv_connect_phone"
            android:background="@drawable/bg_edittext"
            android:cursorVisible="true"
            android:hint="点击输入"
            android:gravity="center_vertical"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_below="@+id/tv_connect_namee"
            android:id="@+id/tv_connect_phonee"
            android:layout_width="wrap_content"
            android:text="联系电话"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/tv_connect_phone"
            android:textCursorDrawable="@drawable/cursor"
            android:layout_width="match_parent"
            android:layout_alignBottom="@+id/tv_connect_phonee"
            android:layout_toRightOf="@+id/tv_connect_phonee"
            android:textColor="@color/color_word"
            android:textSize="14sp"
            android:background="@drawable/bg_edittext"
            android:layout_marginRight="15dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="5dp"
            android:cursorVisible="true"
            android:inputType="number"
            android:gravity="center_vertical"
            android:hint="点击输入"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        style="@style/Line_h"/>

</LinearLayout>
