<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
     >
     
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        >

    <ImageView
        android:id="@+id/iv_wuliao_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_launcher"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/tv_wuliao_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/iv_wuliao_image"
        android:layout_marginLeft="20dp"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:text="名字"/>

    <TextView
        android:id="@+id/tv_wuliao_price"
        android:layout_width="wrap_content"
        android:textColor="@color/color_red"
        android:layout_below="@+id/tv_wuliao_name"
        android:layout_marginTop="15dp"
        android:textSize="17sp"
        android:text=" ¥ 0.00"
        android:layout_alignLeft="@+id/tv_wuliao_name"
        android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        style="@style/Line_h"/>

</LinearLayout><!-- From: file:/F:/studio_workpace/kaku_android/KaKu/src/main/res/layout/item_wuliao.xml -->