<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/user_avatar"
        android:layout_width="@dimen/x40"
        android:layout_height="@dimen/x40"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x30"
        android:src="@drawable/btn_tiwen_ljtw" />

    <ImageView
        android:id="@+id/iv_ind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/x10"
        android:layout_toLeftOf="@+id/user_avatar"
        android:src="@drawable/img_dhk2" />

    <TextView
        android:id="@+id/talk_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/iv_ind"
        android:background="@drawable/talk_detail_item_right"
        android:gravity="center"
        android:maxWidth="@dimen/x450"
        android:padding="@dimen/x10"
        android:textColor="@color/white"
        tools:text="本文本文设计并研制了具有视觉、表情识别与再现功能的仿人头像" />

    <ImageView
        android:id="@+id/img_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/talk_content"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/x10"
        android:layout_toLeftOf="@+id/talk_content"
        android:src="@drawable/progress_large" />

    <TextView
        android:id="@+id/talk_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/talk_content"
        android:layout_below="@+id/talk_content"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/x10"
        android:textColor="#9FADC3"
        android:textSize="@dimen/x18"
        tools:text="11-11 12:19" />

</RelativeLayout><!-- From: file:/F:/studio_workpace/kaku_android/KaKu/src/main/res/layout/layout_talk_item_other.xml -->