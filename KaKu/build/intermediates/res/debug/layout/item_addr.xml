<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View style="@style/Line_h" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_addr_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_addr_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/tv_addr_name"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_addr_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_addr_name"
            android:layout_marginTop="15dp"
            android:textColor="@color/color_word"
            android:textSize="15sp" />

    </RelativeLayout>

    <View style="@style/Line_h" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x88"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/rela_addr_moren"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x88"
            >

            <ImageView
                android:id="@+id/iv_addr_moren"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/x30"
                android:src="@drawable/uncheck_yuan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iv_addr_moren"
                android:text="默认地址"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:textColor="@color/color_word"
                android:textSize="15sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_addr_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:src="@drawable/shanchu" />

        <ImageView
            android:id="@+id/iv_addr_bianji"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/iv_addr_delete"
            android:layout_centerVertical="true"
            android:src="@drawable/bianji" />


    </RelativeLayout>

    <View style="@style/Line_h" />
</LinearLayout>
