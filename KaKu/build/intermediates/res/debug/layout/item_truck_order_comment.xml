<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"

    android:orientation="vertical">

    <View style="@style/Line_h" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        >

        <ImageView
            android:id="@+id/iv_product_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="描述相符"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <RatingBar
                android:id="@+id/rb_comment"
                style="@style/BigRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:numStars="5"
                android:paddingTop="5dp"
                android:rating="5"
                android:stepSize="1"
                />
        </LinearLayout>

    </LinearLayout>
    <View style="@style/Line_h" />

    <LinearLayout
        android:id="@+id/rela_confirmorder_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="visible">

        <EditText
            android:layout_marginLeft="15dp"
            android:id="@+id/et_order_comment"
            style="@style/ConfirmOrderTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:background="@null"
            android:gravity="left|top"
            android:hint="长度在10—500之间,可以为其他人提供参考~"
            android:inputType="textMultiLine"
            android:lines="3"
            android:maxLength="500"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_comment_textsize"
            style="@style/ConfirmOrderTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="right"
            android:inputType="textMultiLine"
            android:text="0/500"
            android:textSize="15sp" />


    </LinearLayout>
    <!--分割线-->
    <View style="@style/Line_h" />


    <!--手机号码-->
    <!--分割线-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        android:orientation="horizontal"
        android:visibility="visible">

        <!--<ImageView
            android:id="@+id/iv_comment_img1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:padding="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/icon_boy" />-->

        <ImageView
            android:id="@+id/iv_comment_add"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="15dp"
            android:src="@drawable/tianjiatupian"
            />

    </LinearLayout>
    <!--分割线-->
    <View style="@style/Line_h" />


</LinearLayout>
