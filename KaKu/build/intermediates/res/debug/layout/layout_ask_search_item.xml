<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/x10"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="@dimen/x26"
        tools:text="我们为了实现文本的滚动可以" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/iv_pic"
        android:layout_below="@+id/question"
        android:layout_marginBottom="@dimen/x20"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginTop="@dimen/x20"
        android:drawableLeft="@drawable/iimg_tiwen2"
        android:drawablePadding="@dimen/x6"
        android:gravity="center_vertical"
        android:textColor="@color/color_hint"
        android:textSize="@dimen/x20"
        tools:text="7分钟前" />

    <View
        style="@style/gray_line"
        android:layout_below="@+id/time" />

    <ImageView
        android:id="@+id/iv_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/iv_pic"
        android:layout_marginRight="@dimen/x30"
        android:layout_marginTop="@dimen/x4" />

</RelativeLayout><!-- From: file:/F:/studio_workpace/kaku_android/KaKu/src/main/res/layout/layout_ask_search_item.xml -->