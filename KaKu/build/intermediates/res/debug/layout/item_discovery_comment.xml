<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"

    android:orientation="vertical">

    <View style="@style/Line_h" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView

            android:id="@+id/iv_discovery_comment_head"
            android:layout_width="@dimen/x54"
            android:layout_height="@dimen/x54"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/x20"
            android:layout_marginTop="@dimen/x20"
            android:src="@drawable/icon_boy" />

        <TextView
            android:id="@+id/tv_discovery_comment_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:text="无"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_discovery_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|right"
            android:text="刚刚"
            android:textColor="#999999"
            android:textSize="15sp" />

    </LinearLayout>

    <View
        style="@style/Line_h"
        android:layout_marginLeft="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:orientation="vertical"
        android:padding="15dp"
        >

        <com.yichang.kaku.view.KakuMultiLineTextView
            android:id="@+id/tv_discovery_comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"



            android:text="无"
            android:textColor="#262626"

            android:textSize="16sp" />


    </LinearLayout>

</LinearLayout>
