<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <include

        layout="@layout/activity_titlebar" />


    <View
        style="@style/Line_h"
        android:layout_marginTop="15dp" />


    <RelativeLayout
        android:id="@+id/rela_setting_comment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x88"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_setting_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:text="*"
            android:textColor="#dd0000"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_setting_star"


            android:text="反馈类型"
            android:textColor="#000000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/tv_comment_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_info_name"
            android:paddingRight="@dimen/x30"
            android:text="— 请选择 —"
            android:textColor="#999999"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/iv_info_name"

            style="@style/MeImageEntry" />

    </RelativeLayout>

    <View style="@style/Line_h" />

    <View
        style="@style/Line_h"
        android:layout_marginTop="15dp" />

    <RelativeLayout
        android:id="@+id/rela_setting_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="15dp">

        <EditText
            android:id="@+id/et_setting_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:cursorVisible="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="left|top"
            android:hint="请输入产品意见，我们将不断优化体验"
            android:lines="6"
            android:maxLength="200"
            android:textColor="#999999"
            android:textCursorDrawable="@drawable/cursor"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_textsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/et_setting_comment"
            android:text="0/100"
            android:textColor="#666666"
            android:textSize="15sp" />

    </RelativeLayout>


    <View style="@style/Line_h" />

    <Button
        android:id="@+id/btn_setting_submit"
        style="@style/Btn_Red"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="17sp" />


</LinearLayout>
