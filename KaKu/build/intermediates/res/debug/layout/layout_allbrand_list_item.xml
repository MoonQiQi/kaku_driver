<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_index"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x44"
        android:orientation="vertical">

        <View style="@style/gray_line" />

        <TextView
            android:id="@+id/tv_index"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x30"
            android:gravity="center_vertical"
            android:text="A"
            android:textColor="@color/black"
            android:textSize="@dimen/x34" />

    </LinearLayout>

    <View style="@style/gray_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x110"
        android:paddingLeft="@dimen/x30">

        <ImageView
            android:id="@+id/iv_brand"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/x80"
            android:layout_centerVertical="true"
            android:background="@null"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/name_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x50"
            android:layout_toRightOf="@+id/iv_brand"
            android:text="红岩"
            android:textColor="@color/black"
            tools:textSize="@dimen/x28" />

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:src="@drawable/hook_red" />

    </RelativeLayout>

</LinearLayout><!-- From: file:/F:/studio_workpace/kaku_android/KaKu/src/main/res/layout/layout_allbrand_list_item.xml -->