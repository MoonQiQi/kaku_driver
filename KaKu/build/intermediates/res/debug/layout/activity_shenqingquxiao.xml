<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
     >
     
    <include layout="@layout/activity_titlebar"
         android:id="@+id/title_shenqingquxiao" />

    <View
        android:layout_marginTop="15dp"
        style="@style/Line_h"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:padding="15dp"
        android:textColor="@color/color_word"
        android:text="我们想知道您为何取消此订单，以便改进我们的服务"/>

    </RelativeLayout>

    <View
        style="@style/Line_h"/>

    <RelativeLayout
        android:id="@+id/rela_quxiao_reason1"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_quxiao_reason1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:src="@drawable/uncheck_yuan" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:padding="15dp"
            android:layout_toRightOf="@+id/iv_quxiao_reason1"
            android:textColor="@color/black"
            android:text="现在不想购买"/>

    </RelativeLayout>

    <View
        style="@style/Line_h"/>

    <RelativeLayout
        android:id="@+id/rela_quxiao_reason2"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_quxiao_reason2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:src="@drawable/uncheck_yuan" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:padding="15dp"
            android:layout_toRightOf="@+id/iv_quxiao_reason2"
            android:textColor="@color/black"
            android:text="商品价格比较昂贵"/>

    </RelativeLayout>

    <View
        style="@style/Line_h"/>

    <RelativeLayout
        android:id="@+id/rela_quxiao_reason3"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_quxiao_reason3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:src="@drawable/uncheck_yuan" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:padding="15dp"
            android:layout_toRightOf="@+id/iv_quxiao_reason3"
            android:textColor="@color/black"
            android:text="错误或重复下单"/>

    </RelativeLayout>

    <View
        style="@style/Line_h"/>

    <RelativeLayout
        android:id="@+id/rela_quxiao_reason4"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_quxiao_reason4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:src="@drawable/uncheck_yuan" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:padding="15dp"
            android:layout_toRightOf="@+id/iv_quxiao_reason4"
            android:textColor="@color/black"
            android:text="服务等待时间过长"/>

    </RelativeLayout>

    <View
        style="@style/Line_h"/>

    <RelativeLayout
        android:id="@+id/rela_quxiao_reason5"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_quxiao_reason5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:src="@drawable/uncheck_yuan" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:padding="15dp"
            android:layout_toRightOf="@+id/iv_quxiao_reason5"
            android:textColor="@color/black"
            android:text="我很不爽"/>

    </RelativeLayout>

    <View
        style="@style/Line_h"/>

    <Button
        android:id="@+id/btn_quxiao_commit"
        style="@style/Btn_Red"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="提交"
        android:textSize="17sp" />

</LinearLayout>
