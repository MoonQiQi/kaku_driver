<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
     >
     
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        >

    <ImageView
        android:id="@+id/iv_carlistitem_image"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/ic_launcher"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        />

        <ImageView
            android:id="@+id/iv_carlistitem_icon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_launcher"
            android:layout_toRightOf="@+id/iv_carlistitem_image"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/tv_carlistitem_pinpai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="品牌"
            android:layout_toRightOf="@+id/iv_carlistitem_icon"
            android:layout_alignBottom="@+id/iv_carlistitem_icon"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:textSize="19sp"/>

        <TextView
            android:id="@+id/tv_carlistitem_qudong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_carlistitem_pinpai"
            android:layout_marginTop="12dp"
            android:layout_alignLeft="@+id/tv_carlistitem_pinpai"
            android:textColor="@color/color_word"
            android:text="驱动形式+马力"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dayuhao"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"/>

    </RelativeLayout>

</LinearLayout><!-- From: file:/F:/studio_workpace/kaku_android/KaKu/src/main/res/layout/item_carlist.xml -->