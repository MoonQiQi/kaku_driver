    <include layout="@layout/activity_titlebar"
         android:id="@+id/title_newaddr" />
    <View
        style="@style/Line_h" android:layout_marginTop="15dp"/>
    <RelativeLayout
        android:id="@+id/rela_newaddr_name"
        
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingRight="@dimen/x30"
        android:layout_height="@dimen/x88">

        <TextView
            android:id="@+id/tv_newaddrname"
            android:layout_width="wrap_content"
            android:text="收货人"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/x30"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_newaddr_jinqu1"
            android:layout_width="wrap_content"
            android:src="@drawable/jinqu"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_newaddr_name"
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@+id/iv_newaddr_jinqu1"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@+id/tv_newaddrname"
            android:layout_centerVertical="true"
            android:textColor="@color/color_word"
            android:textSize="17sp"
            android:layout_marginLeft="15dp"
            android:gravity="right"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        style="@style/Line_h"/>

    <RelativeLayout
        android:id="@+id/rela_newaddr_phone"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingLeft="@dimen/x30"
        android:paddingRight="@dimen/x30"
        android:layout_height="@dimen/x88">

        <TextView
            android:id="@+id/tv_newaddrphone"
            android:layout_width="wrap_content"
            android:text="联系方式"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:textSize="17sp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_newaddr_jinqu2"
            android:layout_width="wrap_content"
            android:src="@drawable/jinqu"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_newaddr_phone"
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@+id/iv_newaddr_jinqu2"
            android:layout_marginRight="15dp"
            android:layout_toRightOf="@+id/tv_newaddrphone"
            android:layout_centerVertical="true"
            android:textColor="@color/color_word"
            android:textSize="17sp"
            android:layout_marginLeft="15dp"
            android:gravity="right"
            android:layout_height="wrap_content" />

    </RelativeLayout>

