<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_baoyang_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/tv_baoyang_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_baoyang_image"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/iv_baoyang_image"
            android:text="名字"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_baoyang_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_baoyang_name"
            android:layout_below="@+id/tv_baoyang_name"
            android:layout_marginTop="10dp"
            android:text="¥0"
            android:textColor="@color/color_red"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_baoyang_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/delete_xiao" />

        <!--   <ImageView
               android:id="@+id/iv_baoyang_genghuan"
               android:layout_width="wrap_content"
               android:visibility="gone"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_marginRight="10dp"
               android:layout_below="@+id/iv_baoyang_delete"
               android:layout_marginTop="15dp"
               android:src="@drawable/genghuan"/>-->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_baoyang_price"
            android:layout_alignParentRight="true"
            android:layout_marginRight="80dp">

            <ImageView
                android:id="@+id/iv_baoyang_jianhao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv_baoyang_num"
                android:gravity="center"
                android:src="@drawable/jianhao" />

            <TextView
                android:id="@+id/tv_baoyang_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/iv_baoyang_jiahao"
                android:background="@drawable/kuangk"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_baoyang_jiahao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:src="@drawable/jia" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout><!-- From: file:/F:/studio_workpace/kaku_android/KaKu/src/main/res/layout/item_shopcar.xml -->